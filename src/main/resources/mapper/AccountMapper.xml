<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ngtesting.platform.dao.AccountDao" >

    <insert id="register" parameterType="TstUser" useGeneratedKeys="true" keyProperty="id">
        insert into TstUser (email,password,nickname,phone,avatar,token,
          leftSizeCase,leftSizeIssue,defaultOrgId,defaultPrjId,
          deleted,disabled,createTime)
        values (#{email},#{password},#{nickname},#{phone},#{avatar},#{token},
          #{leftSizeCase},#{leftSizeIssue},#{defaultOrgId},#{defaultPrjId},
          #{deleted},#{disabled},#{createTime})
    </insert>
    <update id="login">
        UPDATE TstUser
          SET token=#{token}, lastLoginTime=#{lastLoginTime}
          WHERE id=#{id}
    </update>

    <select id="initUser" parameterType="INTEGER" useCache="false" statementType="CALLABLE">
        { call init_user(#{userId,mode=IN,jdbcType=INTEGER}) }
    </select>

    <insert id="genVerifyCode" parameterType="Map" useGeneratedKeys="true" keyProperty="id">
        insert into TstVerifyCode (refId,code,expireTime,createTime,deleted,disabled)
        values (#{userId},#{code},#{expireTime},#{createTime},false,false)
    </insert>

</mapper>
